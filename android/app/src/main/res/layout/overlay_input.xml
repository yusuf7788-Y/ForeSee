<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/overlay_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Hafif kararma -->
    <View
        android:id="@+id/overlay_dim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000" />

    <!-- Orta alttan çıkan büyüleyici iki çizgi -->
    <LinearLayout
        android:id="@+id/overlay_lines_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="104dp"
        android:gravity="center_horizontal">

        <View
            android:id="@+id/overlay_line1"
            android:layout_width="120dp"
            android:layout_height="2dp"
            android:background="#FFFFFFFF"
            android:alpha="0" />

        <View
            android:id="@+id/overlay_line2"
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:layout_marginTop="6dp"
            android:background="#88FFFFFF"
            android:alpha="0" />
    </LinearLayout>

    <!-- Kapatma butonu (sağ üst X) -->
    <ImageButton
        android:id="@+id/btn_overlay_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="end|top"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:tint="@android:color/white" />

    <!-- Mesaj balonları için küçük alan -->
    <LinearLayout
        android:id="@+id/overlay_messages_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="84dp">

        <!-- Balonlar programatik olarak eklenecek -->
    </LinearLayout>

    <!-- Alt ForeSee input bar -->
    <LinearLayout
        android:id="@+id/overlay_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/overlay_bar"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/overlay_input_bg"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <ImageButton
                android:id="@+id/btn_overlay_camera"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_camera"
                android:tint="@android:color/white" />

            <EditText
                android:id="@+id/et_overlay_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="ForeSee'e bir şey sor..."
                android:textColor="@android:color/white"
                android:textColorHint="#88FFFFFF"
                android:maxLines="4"
                android:minLines="1"
                android:inputType="textMultiLine"
                android:background="@android:color/transparent"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <ImageButton
                android:id="@+id/btn_overlay_send"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/overlay_send_circle_bg"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_menu_send"
                android:tint="#000000" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
